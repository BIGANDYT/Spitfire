@using Habitat.Framework.SitecoreExtensions.Extensions
@using Habitat.Teasers
@model Habitat.Teasers.Models.Jango.TeaserModel
<div class="c-content-v-center c-theme-bg" style="background-image: url(@Model.ImageUrl) !important; background-size:cover !important;">  
    @{ if (Sitecore.Context.PageMode.IsPageEditor && Model.ImageUrl == null)
        {
            @Html.Sitecore().Field("Image", @Model.Item, new { @class = "img-responsive" })
        }
    }  
    <div class="c-wrapper">
        <div class="c-body c-center">            
            <p class="c-font-25 c-line-height-34 c-font-white c-font-uppercase c-font-bold"> @Html.Sitecore().Field("Description", @Model.Item)</p>
        </div>
    </div>
</div>