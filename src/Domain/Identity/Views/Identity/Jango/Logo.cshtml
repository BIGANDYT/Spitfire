@using Habitat.Framework.SitecoreExtensions.Extensions
@using Habitat.Identity
@using Habitat.Identity.Repositories
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var identity = IdentityRepository.Get(Model.Item);
    if (identity == null)
    {
        return;
    }
}
<a href="/home.aspx" class="c-logo">
        @Html.Sitecore().Field(Templates.Identity.Fields.Logo.ToString(), identity, new { @class = "c-desktop-logo" })
        @Html.Sitecore().Field(Templates.Identity.Fields.Logo.ToString(), identity, new { @class = "c-desktop-logo-inverse" })
        @Html.Sitecore().Field(Templates.Identity.Fields.Logo.ToString(), identity, new { @class = "c-mobile-logo" })
</a>