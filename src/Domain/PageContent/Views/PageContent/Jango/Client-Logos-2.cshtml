@using System.Web.Mvc.Html
@using Habitat.Framework.SitecoreExtensions.Extensions
@using Habitat.PageContent
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items;
    @model Habitat.PageContent.Models.PageContentModel
    <!-- BEGIN: CONTENT/SLIDERS/CLIENT-LOGOS-2 -->
    <div class="c-content-box c-size-xg c-bg-white">
        <div class="container">
            <!-- Begin: Testimonals 1 component -->
            <div class="c-content-client-logos-slider-1  c-bordered" data-slider="owl" data-items="6" data-desktop-items="4" data-desktop-small-items="3" data-tablet-items="3" data-mobile-small-items="2" data-auto-play="5000">
                <!-- Begin: Title 1 component -->
                <div class="c-content-title-1">
                    <h3 class="c-center c-font-uppercase c-font-bold">@Html.Sitecore().Field("Title", @Model.Item)</h3>
                    <div class="c-line-center c-theme-bg"></div>
                </div>

                <!-- End-->
                @if (Model.CarouselItems != null)
            {
            <!-- Begin: Owlcarousel -->
                    <div class="owl-carousel owl-theme c-theme owl-bordered1">
                        @foreach (Item item in Model.CarouselItems)
                {
                            <div class="item">
                                <a href="#">
                                    <img src="@Sitecore.Resources.Media.MediaManager.GetMediaUrl(item);" alt="" />
                                </a>
                            </div>
                        }
                    </div>
            <!-- End-->
                }
            </div>
            <!-- End-->

        </div>
    </div>
    <!-- END: CONTENT/SLIDERS/CLIENT-LOGOS-2 -->